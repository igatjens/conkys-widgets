# 
# Name: MStyle Conky II
#
# Author: Kant-o (feedback via gnome-look).
# 

alignment top_left

own_window_colour 64A3B1
background yes
use_xft yes
xftfont Cantarell:size=11:bold

default_outline_color 609aa6
draw_outline yes

default_shade_color 79b4c1
default_color 79b4c1
draw_shades no
border_width 0
border_inner_margin 10
border_outer_margin 0
draw_borders yes

# gap_x 125
# gap_y 300

# size of text area
minimum_size 200 0
maximum_width 250
max_text_width 250

no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_transparent no
own_window_class MStyleConkyII_Processes
own_window_type normal
own_window_hints undecorated,sticky,skip_taskbar,skip_pager,below
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

gap_x 1100
gap_y 400
own_window_argb_value 0
own_window_argb_visual no
TEXT
${color def0f4}#
${font Cantarell:size=26}Processes$font 

Process ${alignr}CPU, RAM
${top name 1}#
${font Cantarell:size=9:bold}#
$alignr ${top cpu 1}% ${top mem_res 1}

${top name 2}$alignr ${top cpu 2}%, ${top mem_res 2}
${top name 3}$alignr ${top cpu 3}%, ${top mem_res 3}
${top name 4}$alignr ${top cpu 4}%, ${top mem_res 4}
${top name 5}$alignr ${top cpu 5}%, ${top mem_res 5}
